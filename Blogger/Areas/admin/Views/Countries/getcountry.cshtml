@using Blogger.Help
@model IEnumerable<Blogger.Models.Country>

<table class="table table-striped table-bordered table-hover" id="dataTables-example" style="width:100%">
    <thead>
        <tr>
            <th>
                STT
            </th>
            <th>
                Nước
            </th>
            <th>
                Hình
            </th>
            <th>
                nội dung
            </th>
            <th>
                Hiển thị
            </th>
            <th>
                Vị trí
            </th>
            <th>
                Ngày đăng
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @{var Number = 1; }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.Raw(Number++)
                </td>
                <td style="text-align:left; white-space:nowrap">
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    <img src="~/Content/img/country/@item.img" width="50" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td>
                    @(item.hide.GetValueOrDefault(false) ? "Hiển thị" : "Ẩn")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.order)
                </td>
                <td>
                    <!--Html.DisplayFor(modelItem => item.datebegin)-->
                    @(item.datebigin.HasValue ? item.datebigin.Value.ToString("dd/MM/yyyy") : "")
                </td>
                <td>
                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Edit", "Edit", "countries", routeValues: new { id = item.id }, htmlAttributes: new { @class = "btn btn-default" })
                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-zoom-in'></span>", "Detail", "Details", "countries", routeValues: new { id = item.id }, htmlAttributes: new { @class = "btn btn-primary" })
                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Delete", "Delete", "countries", routeValues: new { id = item.id }, htmlAttributes: new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>
